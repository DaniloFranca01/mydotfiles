#!/usr/bin/env bash

data=$(date +%Y-%m-%d_%H:%M:%S)
diretorio=~/Imagens/Screenshots/
nome=Screenshot
formato=.png
separador=-
saida=$diretorio$nome$separador$data$formato

if [ $1 = "u" ]; then
    exec maim -u $saida &
else
    exec maim -s $saida &
else
    exec maim -u -i $(xdotool getactivewindow) $saida & 
fi

dunstify "[$nome]" "[$nome$separador$data$formato]\n[Salvo em:$diretorio]" -u normal
