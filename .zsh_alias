alias pacs='sudo pacman -S'
alias pacr='sudo pacman -Rns'
alias orfeu='pacman -Qtdq | sudo pacman -Rns -'
alias pccache='sudo paccache -rk 1'
alias pkgsize='expac -H M '%m\t%n' | sort -h'
alias ls='ls --color=auto'
alias lsa='ls -lha'
alias dused='pwd | du -hac * | sort -hr | head -n'
alias dusedez='dused 10'
alias update-grub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias qtilecfg='nvim ~/.config/qtile/config.py'
alias xmoncfg='nvim ~/.config//xmonad/xmonad.hs'
alias leftcfg='nvim ~/.config/leftwm/config.toml'
alias compcfg='nvim ~/.config/picom/picom.conf'
alias polycfg='nvim ~/.config/polybar/config.ini'
alias nvimcfg='nvim ~/.config/nvim/init.vim'
alias pinit='nvim ~/.config/qtile/autostart.sh'
alias cor='grabc'
alias icofy='xdg-icon-resource install --size 128'
alias corc='cor | xclip -in -selection clipboard'
alias polyres='~/.config/polybar/launch.sh'
alias xmonres='xmonad --recompile && xmonad --restart'
alias emacs="emacsclient -c -a 'emacs'"
alias sagent='eval "$(ssh-agent -s)"'
alias fonticon='perl ~/Scripts/test-fonts.pl'
alias esq='cat ~/.zsh_alias ~/.zsh_var | less'
alias code='codium'
